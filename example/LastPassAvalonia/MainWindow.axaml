<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LastPassAvalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LastPassAvalonia.MainWindow"
        x:CompileBindings="True"
        x:DataType="vm:MainWindowViewModel"
        Title="LastPass">
    <StackPanel Spacing="5" Margin="10" VerticalAlignment="Stretch">

        <TextBlock Margin="0 5">Username</TextBlock>
        <TextBox Text="{Binding Username}" />

        <TextBlock Margin="0 5">Password</TextBlock>
        <TextBox Text="{Binding Password}" />

        <Button Command="{Binding Login}" IsEnabled="{Binding IsLoginEnabled}">Login</Button>

        <TextBlock Margin="0 5" Text="{Binding Status}" Foreground="Teal" />

        <!-- MFA -->
        <Separator />

        <StackPanel Spacing="5" Margin="10">

            <CheckBox IsChecked="{Binding RememberMe}" IsEnabled="{Binding IsMfaEnabled}">Remember me</CheckBox>

            <StackPanel Spacing="5" Margin="10" Orientation="Horizontal">

                <!-- Google Auth -->
                <StackPanel Spacing="5" Margin="10" VerticalAlignment="Top" IsEnabled="{Binding IsGoogleAuthEnabled}">
                    <TextBlock Margin="0 10 0 5">Google Authenticator:</TextBlock>
                    <TextBox Text="{Binding GoogleAuthPasscode}" />
                    <Button Command="{Binding ApproveGoogleAuth}">Approve</Button>
                </StackPanel>

                <!-- Microsoft Auth -->
                <StackPanel Spacing="5" Margin="10" VerticalAlignment="Top" IsEnabled="{Binding IsMicrosoftAuthEnabled}">
                    <TextBlock Margin="0 10 0 5">Microsoft Authenticator:</TextBlock>
                    <TextBox Text="{Binding MicrosoftAuthPasscode}" />
                    <Button Command="{Binding ApproveMicrosoftAuth}">Approve</Button>
                </StackPanel>

                <!-- LastPass Auth -->
                <StackPanel Spacing="5" Margin="10" VerticalAlignment="Top" IsEnabled="{Binding IsLastPassAuthEnabled}">
                    <TextBlock Margin="0 10 0 5">LastPass Authenticator:</TextBlock>
                    <StackPanel Spacing="5" Orientation="Horizontal">
                        <TextBox Text="{Binding LastPassAuthPasscode}" />
                        <Button Command="{Binding ApproveLastPassAuth}">Use passcode</Button>
                    </StackPanel>
                    <Button Command="{Binding PushToMobileLastPassAuth}">Push to mobile</Button>
                </StackPanel>

                <!-- Duo -->
                <StackPanel Spacing="5" Margin="10" VerticalAlignment="Top" IsEnabled="{Binding IsDuoEnabled}">
                    <TextBlock Margin="0 10 0 5">Duo:</TextBlock>
                    <ItemsControl ItemsSource="{Binding DuoMethods}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Content="{Binding Name}" GroupName="Duo" IsChecked="{Binding IsChecked}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Command="{Binding ApproveDuo}">Approve</Button>

                    <TextBlock Margin="0 5" Text="{Binding DuoStatus}" Foreground="Green" />
                </StackPanel>

            </StackPanel>

            <!-- MFA methods -->
            <StackPanel Spacing="5" Margin="10" VerticalAlignment="Top" IsEnabled="{Binding IsMfaEnabled}">
                <TextBlock Margin="0 10 0 5">Use a different MFA method:</TextBlock>
                <ItemsControl ItemsSource="{Binding EnabledMfaMethods}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}" Command="{Binding Select}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Margin="0 10 0 5">Or cancel:</TextBlock>
                <Button Content="Cancel MFA" Command="{Binding CancelMfa}" />
            </StackPanel>

        </StackPanel>

    </StackPanel>

</Window>
